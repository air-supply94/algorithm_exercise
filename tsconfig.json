{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "allowJs": false,
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": false,
    "outDir": "./lib",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "listFiles": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "strictNullChecks": false,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "lib", "coverage", "**/__tests__/"]
}
